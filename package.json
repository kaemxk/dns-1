{
  "name": "kata-boilerplate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && NODE_ENV=production vite build",
    "test": "vitest",
    "test:pre-commit": "vitest --run",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:code": "eslint --ext .js,.jsx,.ts,.tsx src --max-warnings=0 --cache",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "prepare": "husky",
    "pretty": "prettier -c src --write",
    "typecheck": "tsc -p tsconfig.app.json",
    "pre-commit": "pnpm typecheck && pnpm lint && pnpm test:pre-commit && pnpm pretty && pnpm lint:fix",
    "server": "json-server -w server/db.cjs -p 4000"
  },
  "dependencies": {
    "@reduxjs/toolkit": "2.2.6",
    "clsx": "2.1.1",
    "eslint-plugin-react": "7.35.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-icons": "5.2.1",
    "react-loading-skeleton": "^3.5.0",
    "react-redux": "9.1.2",
    "react-router-dom": "6.25.1",
    "swiper": "^11.1.14"
  },
  "devDependencies": {
    "@tailwindcss/typography": "0.5.13",
    "@testing-library/dom": "10.3.2",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.0.0",
    "@types/node": "20.14.11",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.15.0",
    "@typescript-eslint/parser": "7.15.0",
    "@vitejs/plugin-react": "4.3.1",
    "autoprefixer": "10.4.19",
    "daisyui": "4.12.10",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.7",
    "happy-dom": "14.12.3",
    "husky": "9.1.1",
    "json-server": "0.17.4",
    "postcss": "8.4.39",
    "prettier": "3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "0.6.5",
    "tailwindcss": "3.4.6",
    "typescript": "5.2.2",
    "vite": "5.3.4",
    "vitest": "2.0.3"
  },
  "packageManager": "pnpm@9.6.0"
}
